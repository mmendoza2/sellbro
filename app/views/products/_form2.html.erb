<%= form_for(Product.new, :html => { :multipart => true }, remote: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <div class="col-sm-6">
        <%= f.collection_select(:subcategory_id,  @subcategories, :id, :name, {:include_blank => false}, {:class => 'form-control input-sm'})   %>
      </div>
    </div>
    <hr/>

    <div class="form-group">
      <%= f.text_field :name, :placeholder => "Name", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.text_field :price, :placeholder => "Price", class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, :placeholder => "Description", class: 'form-control'  %>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.button :submit, class: 'btn btn-success form-control' %>
      </div>
    </div>
<% end %>