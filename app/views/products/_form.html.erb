<%= form_for(@product, :html => { :multipart => true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-inputs">
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :imagen %>
      <%= f.file_field :photo %>

      <%= f.label :video %>
      <%= f.text_field :video %>


    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
